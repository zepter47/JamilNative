<Page
    x:Class="JamilNative.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JamilNative.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF9770">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to Kakaire Estates" FontWeight="SemiBold" FontSize="40" Margin="5"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Broadway" Grid.Row="1"
                   TextAlignment="Center"/>

    </Grid>
</Page>
